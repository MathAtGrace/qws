<?xml version="1.0" encoding="utf-8"?>
<!-- This file, the project manifest, provides the overall configuration for your PreTeXt project. To edit the content of your document, open `source/main.ptx`. See https://pretextbook.org/doc/guide/html/processing-CLI.html#cli-project-manifest. -->
<project ptx-version="2">
  <targets>
    <target
      name = "web"
      format = "html"
      publication = "publication.ptx"
      source = "main.ptx"
      output-dir = "html"
    />
    <target
      name="print"
      format="pdf"
    />
    <target
      name="web-sol"
      format="html"
      publication="publication-solutions.ptx"
      output-dir = "solutions-html"
      xsl = "acs-solution-manual.xsl"
    />
    <target
      name="print-sol"
      format="pdf"
      publication="publication-solutions.ptx"
      output-dir = "solutions-pdf"
      xsl = "acs-solution-manual.xsl"
    />
    <target
      name="workbook"
      format="pdf"
      publication="publication-workbook.ptx"
      output-dir = "workbook-pdf"
      xsl = "acs-activity-workbook.xsl"
    />
  </targets>
</project>
